    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuração do Mercado Pago
            const mp = new MercadoPago('SUA_CHAVE_PUBLICA_AQUI', {
                locale: 'pt-BR'
            });
            
            // Elementos da UI
            const paymentMethods = document.querySelectorAll('.payment-method');
            const cardPaymentSection = document.getElementById('card-payment');
            const pixSection = document.getElementById('pix-section');
            const boletoSection = document.getElementById('boleto-section');
            const checkoutBtn = document.getElementById('checkout-btn');
            const loading = document.getElementById('loading');
            
            // Seleção de método de pagamento
            paymentMethods.forEach(method => {
                method.addEventListener('click', function() {
                    paymentMethods.forEach(m => m.classList.remove('active'));
                    this.classList.add('active');
                    
                    const methodType = this.getAttribute('data-method');
                    
                    // Mostra a seção correspondente
                    cardPaymentSection.style.display = 'none';
                    pixSection.style.display = 'none';
                    boletoSection.style.display = 'none';
                    checkoutBtn.style.display = 'none';
                    
                    if (methodType === 'card') {
                        cardPaymentSection.style.display = 'block';
                        checkoutBtn.style.display = 'block';
                    } else if (methodType === 'pix') {
                        pixSection.style.display = 'block';
                        checkoutBtn.style.display = 'block';
                    } else if (methodType === 'boleto') {
                        boletoSection.style.display = 'block';
                        checkoutBtn.style.display = 'block';
                    }
                });
            });
            
            // Formatação de campos
            document.getElementById('cardNumber').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                value = value.replace(/(\d{4})(?=\d)/g, '$1 ');
                e.target.value = value.substring(0, 19);
            });
            
            document.getElementById('cardExpiry').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 2) {
                    value = value.substring(0, 2) + '/' + value.substring(2, 4);
                }
                e.target.value = value.substring(0, 5);
            });
            
            document.getElementById('cardCVC').addEventListener('input', function(e) {
                e.target.value = e.target.value.replace(/\D/g, '').substring(0, 4);
            });
            
            document.getElementById('cpf').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 3 && value.length <= 6) {
                    value = value.substring(0, 3) + '.' + value.substring(3);
                } else if (value.length > 6 && value.length <= 9) {
                    value = value.substring(0, 3) + '.' + value.substring(3, 6) + '.' + value.substring(6);
                } else if (value.length > 9) {
                    value = value.substring(0, 3) + '.' + value.substring(3, 6) + '.' + value.substring(6, 9) + '-' + value.substring(9, 11);
                }
                e.target.value = value.substring(0, 14);
            });
            
            document.getElementById('cep').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 5) {
                    value = value.substring(0, 5) + '-' + value.substring(5, 8);
                }
                e.target.value = value.substring(0, 9);
                
                // Buscar endereço automaticamente quando o CEP estiver completo
                if (value.length === 9) {
                    buscarEndereco(value);
                }
            });
            
            // Função para buscar endereço pelo CEP
            function buscarEndereco(cep) {
                // Simulação de busca de CEP (em produção, use uma API como ViaCEP)
                console.log("Buscando endereço para o CEP: " + cep);
                // Exemplo: fetch(`https://viacep.com.br/ws/${cep}/json/`)
            }
            
            // Processamento do pagamento
            checkoutBtn.addEventListener('click', function() {
                // Validação básica do formulário
                if (!validarFormulario()) {
                    alert('Por favor, preencha todos os campos obrigatórios.');
                    return;
                }
                
                loading.style.display = 'block';
                
                // Simulação de processamento (em produção, você faria a integração com a API do Mercado Pago)
                setTimeout(function() {
                    loading.style.display = 'none';
                    
                    // Simulação de sucesso no pagamento
                    alert('Pagamento processado com sucesso! Em produção, esta integração se conectaria à API do Mercado Pago.');
                    
                    // Redirecionamento simulado
                    // window.location.href = "pagamento-sucesso.html";
                }, 3000);
            });
            
            // Validação do formulário
            function validarFormulario() {
                const requiredFields = document.querySelectorAll('#address-form [required]');
                let isValid = true;
                
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.style.borderColor = 'var(--primary)';
                    } else {
                        field.style.borderColor = '#444';
                    }
                });
                
                return isValid;
            }
        });
    </script>
