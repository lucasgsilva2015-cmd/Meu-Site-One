    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Dados de exemplo para o carrinho
            const carrinhoItens = [
                {
                    id: 1,
                    nome: "Protetor Bucal",
                    preco: 15.00,
                    quantidade: 1,
                    imagem: "https://via.placeholder.com/80x80?text=Produto"
                },
                {
                    id: 2,
                    nome: "Shorts Dry-Fit",
                    preco: 24.99,
                    quantidade: 1,
                    imagem: "https://via.placeholder.com/80x80?text=Produto"
                }
            ];
            
            const carrinhoContainer = document.getElementById('carrinho-itens');
            const subtotalElement = document.getElementById('subtotal');
            const descontoElement = document.getElementById('desconto');
            const freteElement = document.getElementById('frete');
            const totalElement = document.getElementById('total');
            const finalizarCompraBtn = document.getElementById('finalizar-compra');
            
            // Renderizar itens do carrinho
            function renderizarCarrinho() {
                if (carrinhoItens.length === 0) {
                    carrinhoContainer.innerHTML = `
                        <div class="carrinho-vazio">
                            <i class="fas fa-shopping-cart"></i>
                            <p>Seu carrinho estÃ¡ vazio</p>
                            <a href="#">Continuar comprando</a>
                        </div>
                    `;
                    return;
                }
                
                carrinhoContainer.innerHTML = '';
                carrinhoItens.forEach(item => {
                    const itemElement = document.createElement('div');
                    itemElement.className = 'item';
                    itemElement.innerHTML = `
                        <img src="${item.imagem}" alt="${item.nome}">
                        <div class="item-info">
                            <h3>${item.nome}</h3>
                            <p class="preco">R$${item.preco.toFixed(2)}</p>
                            <div class="quantidade">
                                <button onclick="alterarQuantidade(${item.id}, -1)">-</button>
                                <span>${item.quantidade}</span>
                                <button onclick="alterarQuantidade(${item.id}, 1)">+</button>
                            </div>
                            <p class="subtotal">Subtotal: R$${(item.preco * item.quantidade).toFixed(2)}</p>
                        </div>
                        <div class="item-controles">
                            <span class="remover" onclick="removerItem(${item.id})">
                                <i class="fa-solid fa-trash"></i>
                            </span>
                        </div>
                    `;
                    carrinhoContainer.appendChild(itemElement);
                });
                
                calcularTotal();
            }
            
            // Calcular totais
            function calcularTotal() {
                const subtotal = carrinhoItens.reduce((total, item) => total + (item.preco * item.quantidade), 0);
                const desconto = 0; // Poderia ser calculado com base em cupons
                const frete = subtotal > 100 ? 0 : 15; // Frete grÃ¡tis para compras acima de R$100
                const total = subtotal - desconto + frete;
                
                subtotalElement.textContent = `R$${subtotal.toFixed(2)}`;
                descontoElement.textContent = `R$${desconto.toFixed(2)}`;
                freteElement.textContent = frete === 0 ? 'GrÃ¡tis' : `R$${frete.toFixed(2)}`;
                totalElement.textContent = `R$${total.toFixed(2)}`;
            }
            
            // Alterar quantidade do item
            window.alterarQuantidade = function(id, cambio) {
                const itemIndex = carrinhoItens.findIndex(item => item.id === id);
                if (itemIndex !== -1) {
                    carrinhoItens[itemIndex].quantidade += cambio;
                    
                    // Remover item se a quantidade for zero ou menos
                    if (carrinhoItens[itemIndex].quantidade <= 0) {
                        carrinhoItens.splice(itemIndex, 1);
                    }
                    
                    renderizarCarrinho();
                }
            }
            
            // Remover item do carrinho
            window.removerItem = function(id) {
                const itemIndex = carrinhoItens.findIndex(item => item.id === id);
                if (itemIndex !== -1) {
                    carrinhoItens.splice(itemIndex, 1);
                    renderizarCarrinho();
                }
            }
            
            // Finalizar compra
            finalizarCompraBtn.addEventListener('click', function() {
                if (carrinhoItens.length === 0) {
                    alert('Seu carrinho estÃ¡ vazio!');
                    return;
                }
                
                // Redirecionar para a pÃ¡gina de checkout (no caso, para a Shopee)
                window.open('https://shopee.com.br/genovaone', '_blank');
            });
            
            // Inicializar carrinho
            renderizarCarrinho();
        });
    </script>
</body>
